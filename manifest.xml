<?xml version="1.0" encoding="UTF-8"?>
<ajxp_plugin  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:../core.ajaxplorer/ajxp_registry.xsd" name="classified" enabled="false" label="CONF_MESSAGE[Classified Banner]" description="CONF_MESSAGE[This plugin places a banner at the top and bottom of the site indicating the classification level for the site.]" >
    <server_settings>
        
        <global_param name="CUSTOM_FOOTER_CONTENT" type="textarea" label="CONF_MESSAGE[Footer Content]" description="CONF_MESSAGE[Display this content in the footer]" mandatory="false" default="Your custom footer content"/>
        

        <global_param expose="true" name="SITE_CLASSIFICATION_LEVEL" type="select" choices="1|Unclassified, 2|Classified, 3|Top Secret" label="CONF_MESSAGE[Site Classification Level]" description="CONF_MESSAGE[Select the Classification Level]" mandatory="true" default="1"/>



    </server_settings>

    <client_settings>
        <resources>
            <i18n namespace="classified" path="plugins/gui.classified/res/i18n"/>
        </resources>
    </client_settings>

	<registry_contributions>
		
        <client_configs uuidAttr="name">
			<template name="head" element="ajxp_desktop" position="top"><![CDATA[
				<div id="optional_header_div" style="background-color: #999; color: white;font-family:arial;padding:10px;">SITE CLASSIFICATION LEVEL - Header</div>
			]]></template>

            <template name="bottom" element="ajxp_desktop" position="after"><![CDATA[
                <div id="optional_bottom_div" style="font-family:arial;padding:10px;">SITE CLASSIFICATION LEVEL - Footer</div>
            ]]></template>

		</client_configs>
        <actions>
            
            
        </actions>
	</registry_contributions>
	<class_definition filename="plugins/gui.classified/class.PluginClassified.php" classname="PluginClassified"/>
</ajxp_plugin>